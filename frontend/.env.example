# ORMS Application Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://orms_user:orms_password@db:5432/orms_db
DB_HOST=db
DB_PORT=5432
DB_USER=orms_user
DB_PASSWORD=orms_password
DB_NAME=orms_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-flask-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_PLAN_ID=your_paypal_plan_id_here

# Email Configuration (Amazon WorkMail)
SENDER_EMAIL=internal@troupe.academy
SENDER_NAME=Trouper Academy
SMTP_SERVER=smtp.mail.eu-west-1.awsapps.com
SMTP_PORT=465
SMTP_USE_SSL=true
SMTP_USERNAME=internal@troupe.academy
SENDER_PASSWORD=your_workmail_password_here

# React App Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Docker Configuration
COMPOSE_PROJECT_NAME=orms

# AI/ML Configuration (OpenAI)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_ORGANIZATION_ID=org-your-organization-id-here
AI_SESSION_PROCESSOR_ENABLED=true
AI_FEEDBACK_ENABLED=true

# Video Conferencing Configuration (Zoom)
ZOOM_ACCOUNT_ID=your-zoom-account-id-here
ZOOM_CLIENT_ID=your-zoom-client-id-here
ZOOM_CLIENT_SECRET=your-zoom-client-secret-here
ZOOM_WEBHOOK_SECRET_TOKEN=your-zoom-webhook-secret-here
VIDEO_CONFERENCING_ENABLED=true
VIDEO_CONFERENCING_PROVIDER=zoom

# Feature Toggles
AI_QUESTION_GENERATION_ENABLED=true
AI_SESSION_ANALYSIS_ENABLED=true
AI_TUTOR_FEEDBACK_ENABLED=true
VIDEO_RECORDING_ENABLED=false
TRANSCRIPTION_ENABLED=true

# Password Management & Security
PASSWORD_ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key
ADMIN_SECRET=admin123

# Production Settings
NODE_ENV=production
PYTHONPATH=/app